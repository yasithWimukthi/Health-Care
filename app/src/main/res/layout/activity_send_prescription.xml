<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SendPrescription" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="633dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="440dp"
            android:foregroundGravity="center"
            app:layout_constraintBottom_toTopOf="@+id/per_update_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/iconhart" />

        <TextView
            android:id="@+id/per_sendid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="92dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="@string/pre_sendtitle"
            android:textColor="#050505"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <EditText
            android:id="@+id/per_update_username"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="344dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#B2A1FB"
            android:ems="10"
            android:hint="@string/pre_send_username"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            android:textColorHint="#5A5858"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/per_update_address"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="408dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#B2A1FB"
            android:ems="10"
            android:hint="@string/pre_send_address"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            android:textColorHint="#403E3E"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/per_update_description"
            android:layout_width="366dp"
            android:layout_height="65dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="472dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#B2A1FB"
            android:ems="10"
            android:hint="@string/pre_send_description"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            android:textColorHint="#4C4949"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/per_update_btn"
            android:layout_width="175dp"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_style"
            android:text="@string/per_send_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="84dp"
            android:layout_height="88dp"
            android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toTopOf="@+id/per_update_username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/ic_menu_upload" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottm_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabCradleMargin="12dp"
        app:fabCradleRoundedCornerRadius="36dp"
        app:backgroundTint="#BCAEF6">

    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="#4B26EC"
        android:src="@drawable/ic_home"
        app:layout_anchor="@id/bottm_bar">


    </com.google.android.material.floatingactionbutton.FloatingActionButton>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:backgroundTint="#191818"
        android:text="@string/img_title"
        android:textColor="#070707"
        android:textSize="18sp"
        app:layout_anchor="@+id/constraintLayout"
        app:layout_anchorGravity="center" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>